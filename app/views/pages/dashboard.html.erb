<div class="container" style="padding-top: 80px; padding-bottom: 80px;">
 <h2>Dashboard</h2>
 <hr>
 <br>
 <div class="row">
   <div class="col-md-4 text-center">
    <h3><i class="fas fa-users"></i> Subscribers -  <%= @subscriptions.all.count %></h3>
    <p><a href="/subscriptions">View</a></p>
  </div>
  <div class="col-md-4 text-center">
    <h3><i class="fas fa-scroll"></i> Posts - <%= @lectures.all.count %> </h3>
    <p><a href="/all_lectures">View</a></p>
  </div>
  <div class="col-md-4 text-center">
    <h3><i class="fas fa-video"></i> Tutoriales - <%= @post.all.count %> </h3>
    <p><a href="/posts/">View</a></p>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-4 text-center">
    <h3><i class="fas fa-list"></i> Temas - <%= @themes.all.count %> </h3>
    <p><a href="/themes">View</a></p>
  </div>
  <div class="col-md-4 text-center">
    <h3><i class="fas fa-book"></i> Categorias - <%= @topics.all.count %> </h3>
    <p><a href="/posts_topics">View</a></p>
  </div>
  <div class="col-md-4 text-center">
    <h3><i class="fas fa-list"></i> BMO - <%= @bmos.all.count %> </h3>
    <p><a href="/bmos">View</a></p>
  </div>
</div>
<div class="row">
  <div class="col-md-4 text-center">
    <h3><i class="fas fa-microphone-alt"></i> Podcast - <%= @episode.all.count %> </h3>
    <p><a href="/all_episodes">View</a> | <%= link_to 'New Episode', new_episode_path %></p>
  </div>
  <div class="col-md-4 text-center">
    <h3><i class="fas fa-user-astronaut"></i> Hunters - <%= @episode.all.count %> </h3>
    <p><a href="/hunters">View</a> </p>
  </div>
</div>
<hr>
</div>
