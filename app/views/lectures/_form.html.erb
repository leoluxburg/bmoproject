<div class="container">
<%= simple_form_for(@lecture) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :number %>
    <%= f.input :description %>
    <div class="row">
      <div class="col-md-4"><%= f.input :writter %></div>
      <div class="col-md-4"><%= f.input :lenght %></div>
      <div class="col-md-4"><%= f.input :year %></div>
    </div>
    <%= f.text_area :content,  class: "tinymce" %>
    <%= f.input :video %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-dark" %>
  </div>
<% end %>
</div>
